<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9DADA" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtCenterLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:gravity="center_horizontal"
        android:text="Missed Call\nRegistration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/logos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/four_arms" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:src="@drawable/mptrx" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnGmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSkipLogin"
        android:layout_alignLeft="@+id/btnSkipLogin"
        android:layout_alignRight="@+id/btnSkipLogin"
        android:layout_marginBottom="20dp"
        android:background="#df4a32"
        android:padding="5dp"
        android:src="@drawable/google_plus" />

    <ImageButton
        android:id="@+id/btnSkipLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logos"
        android:layout_alignLeft="@+id/logos"
        android:layout_alignRight="@+id/logos"
        android:layout_marginBottom="35dp"
        android:background="#00d6ff"
        android:padding="5dp"
        android:src="@drawable/demo" />

</RelativeLayout>